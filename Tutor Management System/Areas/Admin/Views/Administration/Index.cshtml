@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (Model.Any())
{
    <main id="main" class="main">
        <div class="card">
            <div class="card-body">
                <a asp-area="Admin" asp-controller="Administration" asp-action="Create" class="card-title">Create Role</a>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Actions</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>@role.Id</td>
                                <td>@role.Name</td>
                                <td>
                                    <a class="btn btn-primary" asp-area="Admin" asp-controller="Administration" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                                    <a class="btn btn-primary" asp-area="Admin" asp-controller="Administration" asp-action="Actions" asp-route-id="@role.Id">Actions</a>
                                    <a class="btn btn-danger" asp-area="Admin" asp-controller="Administration" asp-action="Delete" asp-route-id="@role.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </main>
}
else
{
    <main id="main" class="main">
        <div class="card">
            <div class="card-body">
                <a asp-area="Admin" asp-controller="Administration" asp-action="Create" class="card-title">Create Role</a>
            </div>
        </div>
    </main>
}
