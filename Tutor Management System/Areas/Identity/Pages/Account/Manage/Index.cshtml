@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />


    
    <form id="profile-form" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row mb-3">
            <label for="profileImage" class="col-md-4 col-lg-3 col-form-label">Profile Image</label>
            <div class="col-md-8 col-lg-9">
            <img class="img img-fluid h-50 w-25" src="/Uplode/@Model.Input.ProfilePick" alt="Profile">
                <div class="pt-2">
                    <input  type="file" class="btn btn-primary btn-sm" asp-for="Input.ImageFile" ><i class="bi bi-upload"></i></input>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <label for="about" class="col-md-4 col-lg-3 col-form-label">About</label>
            <div class="col-md-8 col-lg-9">
                <textarea asp-for="Input.About" class="form-control" style="height: 100px"></textarea>
                <span asp-validation-for="Input.About" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label for="company" class="col-md-4 col-lg-3 col-form-label">Company</label>
            <div class="col-md-8 col-lg-9">
                <input asp-for="Input.Company" class="form-control" />
                <span asp-validation-for="Input.Company" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label for="Job" class="col-md-4 col-lg-3 col-form-label">Job</label>
            <div class="col-md-8 col-lg-9">
                <input asp-for="Input.Dagiknation" class="form-control" />
                <span asp-validation-for="Input.Dagiknation" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label for="Country" class="col-md-4 col-lg-3 col-form-label">Country</label>
            <div class="col-md-8 col-lg-9">
                <input asp-for="Input.Country" class="form-control" />
                <span asp-validation-for="Input.Country" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label for="Address" class="col-md-4 col-lg-3 col-form-label">Address</label>
            <div class="col-md-8 col-lg-9">
                <input asp-for="Input.Address" class="form-control" />
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
        </div> 

        <div class="row mb-3">
            <label for="Phone" class="col-md-4 col-lg-3 col-form-label">Phone</label>
            <div class="col-md-8 col-lg-9">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label for="Twitter" class="col-md-4 col-lg-3 col-form-label">Twitter Profile</label>
            <div class="col-md-8 col-lg-9">
                <input asp-for="Input.Twitter" class="form-control" />
                <span asp-validation-for="Input.Twitter" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label for="Facebook" class="col-md-4 col-lg-3 col-form-label">Facebook Profile</label>
            <div class="col-md-8 col-lg-9">
                <input asp-for="Input.Facebook" class="form-control" />
                <span asp-validation-for="Input.Facebook" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label for="Instagram" class="col-md-4 col-lg-3 col-form-label">Instagram Profile</label>
            <div class="col-md-8 col-lg-9">
                <input asp-for="Input.Instagram" class="form-control" />
                <span asp-validation-for="Input.Instagram" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label for="Linkedin" class="col-md-4 col-lg-3 col-form-label">Linkedin Profile</label>
            <div class="col-md-8 col-lg-9">
                <input asp-for="Input.Linkedin" class="form-control" />
                <span asp-validation-for="Input.Linkedin" class="text-danger"></span>
            </div>
        </div>

        <div class="text-center">
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </form>

